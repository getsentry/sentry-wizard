{
  "extends": "./tsconfig.build.json",

  "compilerOptions": {
    "moduleResolution": "node16",
    "module": "node16",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
  },
  "include": [
    "__tests__",
    "index.ts",
    "bin.ts",
    "lib/**/*",
    "spec/**/*",
    "src/**/*",
    "test/**/*",
    "e2e-tests/**/*",
    "types/**/*"
  ],
  "exclude": [
    "e2e-tests/test-applications/**/*",
    "e2e-tests/vitest.config.ts",
    "**/fixtures/**",
  ],
  "ts-node": {
    "files": true
  }
}
