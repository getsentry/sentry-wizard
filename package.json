{
  "name": "@sentry/wizard",
  "version": "0.8.2",
  "homepage": "https://github.com/getsentry/sentry-wizard",
  "repository": "https://github.com/getsentry/sentry-wizard",
  "description": "Sentry wizard helping you to configure your project",
  "keywords": [
    "sentry",
    "wizard",
    "sdk",
    "cli",
    "project",
    "setup",
    "install",
    "configure"
  ],
  "bin": {
    "sentry-wizard": "dist/bin.js"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "dependencies": {
    "@sentry/cli": "^1.28.4",
    "chalk": "^2.3.0",
    "glob": "^7.1.2",
    "inquirer": "^5.0.1",
    "lodash": "^4.17.4",
    "open": "^0.0.5",
    "r2": "^2.0.0",
    "read-env": "^1.1.1",
    "xcode": "^1.0.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.36",
    "@types/jest": "^22.1.0",
    "@types/lodash": "^4.14.96",
    "@types/node": "^9.3.0",
    "jest": "^22.1.4",
    "prettier": "^1.10.2",
    "ts-jest": "^22.0.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.2",
    "vrsource-tslint-rules": "^5.8.0"
  },
  "engines": {
    "node": ">=6.9.5",
    "npm": ">=3.10.7",
    "yarn": ">=1.0.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "dist": "yarn clean && tsc -p tsconfig.json && chmod +x ./dist/bin.js",
    "test": "yarn dist && jest",
    "try": "ts-node bin.ts",
    "test:watch": "jest --watch --notify",
    "preversion": "yarn test",
    "preversion:changelog": "grep -q -F \"## v$npm_package_version\" CHANGELOG.md",
    "version": "yarn preversion:changelog && git add -A",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/__mocks__"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "\\.d\\.(jsx?|tsx?)$",
      "\\.no-jest\\.(jsx?|tsx?)$"
    ]
  },
  "author": "Sentry",
  "license": "MIT"
}
