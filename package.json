{
  "name": "@sentry/wizard",
  "version": "1.2.6",
  "homepage": "https://github.com/getsentry/sentry-wizard",
  "repository": "https://github.com/getsentry/sentry-wizard",
  "description": "Sentry wizard helping you to configure your project",
  "keywords": [
    "sentry",
    "wizard",
    "sdk",
    "cli",
    "project",
    "setup",
    "install",
    "configure"
  ],
  "bin": {
    "sentry-wizard": "dist/bin.js"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "dependencies": {
    "@sentry/cli": "^1.52.4",
    "chalk": "^2.4.1",
    "glob": "^7.1.3",
    "inquirer": "^6.2.0",
    "lodash": "^4.17.15",
    "opn": "^5.4.0",
    "r2": "^2.0.1",
    "read-env": "^1.3.0",
    "xcode": "2.0.0",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@sentry-internal/eslint-config-sdk": "^6.2.1",
    "@types/inquirer": "^0.0.43",
    "@types/jest": "^23.3.2",
    "@types/lodash": "^4.14.144",
    "@types/node": "^10.11.0",
    "eslint": "^7.21.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.3",
    "vrsource-tslint-rules": "^5.8.2"
  },
  "engines": {
    "node": ">=6.9.5",
    "npm": ">=3.10.7",
    "yarn": ">=1.0.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "prebuild": "yarn clean",
    "build:watch": "yarn tsc -w",
    "build": "yarn tsc",
    "postbuild": "chmod +x ./dist/bin.js && cp -r scripts/** dist",
    "lint": "yarn lint:prettier && yarn lint:eslint",
    "lint:prettier": "prettier --check lib/**/*.ts",
    "lint:eslint": "eslint . --cache --format stylish",
    "fix": "yarn fix:eslint && yarn fix:prettier",
    "fix:prettier": "prettier --write lib/**/*.ts",
    "fix:eslint": "eslint . --format stylish --fix",
    "test": "yarn build && jest",
    "try": "ts-node bin.ts",
    "test:watch": "jest --watch --notify"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/__mocks__"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "\\.d\\.(jsx?|tsx?)$",
      "\\.no-jest\\.(jsx?|tsx?)$"
    ],
    "testEnvironment": "node"
  },
  "author": "Sentry",
  "license": "MIT"
}
