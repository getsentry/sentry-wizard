{
  "name": "@sentry/wizard",
  "version": "0.11.0",
  "homepage": "https://github.com/getsentry/sentry-wizard",
  "repository": "https://github.com/getsentry/sentry-wizard",
  "description": "Sentry wizard helping you to configure your project",
  "keywords": [
    "sentry",
    "wizard",
    "sdk",
    "cli",
    "project",
    "setup",
    "install",
    "configure"
  ],
  "bin": {
    "sentry-wizard": "dist/bin.js"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "typescript": {
    "definition": "dist/index.d.ts"
  },
  "dependencies": {
    "@sentry/cli": "^1.34.0",
    "chalk": "^2.4.1",
    "glob": "^7.1.2",
    "inquirer": "^6.0.0",
    "lodash": "^4.17.10",
    "opn": "^5.3.0",
    "r2": "^2.0.1",
    "read-env": "^1.2.0",
    "xcode": "^1.0.0",
    "yargs": "^12.0.1"
  },
  "devDependencies": {
    "@types/inquirer": "^0.0.42",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.115",
    "@types/node": "^10.5.4",
    "jest": "^23.4.2",
    "prettier": "^1.14.0",
    "ts-jest": "^23.0.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2",
    "vrsource-tslint-rules": "^5.8.2"
  },
  "engines": {
    "node": ">=6.9.5",
    "npm": ">=3.10.7",
    "yarn": ">=1.0.2"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "prebuild": "yarn clean",
    "build:watch": "tsc -w",
    "build": "tsc",
    "postbuild": "chmod +x ./dist/bin.js && cp -r scripts/** dist",
    "test": "yarn build && jest",
    "try": "ts-node bin.ts",
    "test:watch": "jest --watch --notify",
    "preversion": "yarn test",
    "preversion:changelog": "grep -q -F \"## v$npm_package_version\" CHANGELOG.md",
    "version": "yarn preversion:changelog && git add -A",
    "postversion": "git push && git push --tags"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/__mocks__"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "\\.d\\.(jsx?|tsx?)$",
      "\\.no-jest\\.(jsx?|tsx?)$"
    ],
    "testEnvironment": "node"
  },
  "author": "Sentry",
  "license": "MIT"
}
